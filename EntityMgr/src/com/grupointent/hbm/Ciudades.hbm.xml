<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class entity-name="Ciudades" table="dbo.Tbl_PaisDepartamentoCiudad">
		<id name="idCiudad" column="idCiudad" type="integer">
			<generator class="increment" />
		</id>

		<property name="Ciudad" type="string" column="Ciudad" length="100"
			not-null="false"></property>
		<property name="Departamento" type="string" column="Departamento"
			length="100" not-null="false"></property>
		<property name="Pa&#237;s" type="string" column="Pais"
			length="100" not-null="false"></property>
		<property name="Estado" type="string" column="Estado" length="50"
			not-null="false"></property>
	</class>
</hibernate-mapping>
