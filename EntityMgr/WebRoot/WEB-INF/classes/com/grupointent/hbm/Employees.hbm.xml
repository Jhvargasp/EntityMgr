<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class entity-name="Empleados" table="dbo.Tbl_Empleado">
		<id name="Usuario" column="Usuario" type="string" length="50">
		</id>
		<property name="Nombre" type="string"  column="Nombre" length="100" not-null="false"></property>
		<property name="Email" type="string"  column="Email" length="100" not-null="false"></property>
		<property name="Dependencia" type="string"  column="Dependencia" length="200" not-null="false"></property>
		<property name="Cargo" type="string"  column="Cargo" length="255" not-null="false"></property>
		
	</class>
</hibernate-mapping>
